<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:weightSum="1">

    //투개더 로고

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.35"
        android:weightSum="1">

        <ImageView
            android:id="@+id/login_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:src="@drawable/together_logo" />
    </LinearLayout>



    //이메일 입력

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.35"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp">

            <ImageView
                android:id="@+id/uimage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="0.7"

                app:srcCompat="@drawable/ic_user" />

            <EditText
                android:id="@+id/login_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="0.3"
                android:ems="10"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:padding="20dp" />

        </LinearLayout>

        //비밀번호 입력

        <ImageView
        android:id="@+id/together_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/upassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="0.7"
                app:srcCompat="@drawable/ic_lock" />

            <EditText
                android:id="@+id/login_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_weight="0.3"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="20dp" />


        </LinearLayout>

    </LinearLayout>
    //로그인, 페이스북로그인, 로그인 버튼

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:orientation="vertical"
        android:textAlignment="center">

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="370dp"
            android:layout_height="64dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/reg_btn_style"
            android:text="Login"
            android:textColor="#fff"
            android:textStyle="bold" />


        <Button
            android:id="@+id/face_book_login"
            android:layout_width="370dp"
            android:layout_height="64dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/reg_btn_style2"
            android:text="Login with Facebook"
            android:textColor="#fff"
            android:textStyle="bold" />

        <Button
            android:id="@+id/register"
            android:layout_width="370dp"
            android:layout_height="64dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/reg_btn_style3"
            android:text="Register"
            android:textColor="#fff"
            android:textStyle="bold" />
    </LinearLayout>



</LinearLayout>