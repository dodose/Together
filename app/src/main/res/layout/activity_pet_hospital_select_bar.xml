<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_slider_round"
    android:orientation="vertical">
    //위에 TextView 보여줄 부분
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="진료항목 선택"
            android:textColor="#000000"
            android:textSize="30dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textStyle="bold"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000"/>
    </LinearLayout>

    //본문 radio버튼들 넣을 부분
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/radioGroup"
            android:orientation="vertical">
            <RadioButton
                android:layout_weight="1"
                android:text="종합"
                android:id="@+id/dpt_all"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <RadioButton
                android:layout_weight="1"
                android:text="내과"
                android:id="@+id/dpt_internal"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <RadioButton
                android:layout_weight="1"
                android:text="외과"
                android:id="@+id/dpt_surgery"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <RadioButton
                android:id="@+id/dpt_skin"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="피부과" />
            <RadioButton
                android:layout_weight="1"
                android:text="안과"
                android:id="@+id/dpt_eyes"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <RadioButton
                android:layout_weight="1"
                android:text="치과"
                android:id="@+id/dpt_dentist"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <RadioButton
                android:layout_weight="1"
                android:text="산과"
                android:id="@+id/dpt_birth"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <RadioButton
                android:layout_weight="1"
                android:text="기타"
                android:id="@+id/dpt_etc"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
        </RadioGroup>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"/>


    //밑에 버튼들 넣을 부분
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="vertical">

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/image_slider_round"
            android:text="취소"
            android:textSize="18dp"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            />

    </LinearLayout>
</LinearLayout>