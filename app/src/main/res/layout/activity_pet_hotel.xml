<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:tag="layout/activity_hotel_home_0"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/mdtp_white"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_btn_back"
            android:id="@+id/backTo"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="호텔예약"
            android:layout_gravity="center"
            android:id="@+id/HotelNameView"
            android:textSize="20sp"
            />


    </androidx.appcompat.widget.Toolbar>


    //로고를 감싸는 layout

        <ImageView
            android:id="@+id/together_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:src="@drawable/together_logo" />


        //버튼들이랑 텍스트 전체 감사는 Layout
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:background="@drawable/hotel_home_body"
            android:orientation="vertical">





            //아이콘이랑 텍스트값 전체를 감싸는 layout

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        app:srcCompat="@drawable/ic_3d_building" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:padding="35dp"
                        android:text="호텔이름 또는 지역 명"
                        android:textSize="24dp"/>

            </LinearLayout>
            //아이콘이랑 텍스트값 전체를 감싸는 layout


            //호텔-검색하기 버튼 Layout
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center">

                <EditText
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:hint="현재 위치 또는 지역 명"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/hotel_loaction_btn"/>

            </LinearLayout>
            //호텔-검색하기 버튼 Layout

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                />


            //날짜 선택 Layout
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/hotel_round_rectangle"
                    android:textSize="20dp"
                    android:text="날짜 선택"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

            </LinearLayout>
            //날짜 선택 Layout

            //날짜 아이콘이랑 선택한 날짜 Layout
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">


                //날짜 아이콘만 감싸는 Layout
                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"

                       android:layout_weight="0.6"
                       app:srcCompat="@drawable/ic_schedule" />

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:padding="20dp"
                        android:text="2019/7/12~2019/7/15"
                        android:textSize="24dp"
                        />

            </LinearLayout>
            //날짜 아이콘이랑 선택한 날짜 Layout

            <View
                android:layout_width="370dp"
                android:layout_height="1dp"
                android:background="#000"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                />



            //날짜 선택 Layout
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/searchBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/hotel_searchbtn"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:textSize="20dp"
                    android:text="호텔 검색"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

            </LinearLayout>
            //날짜 선택 Layout


        </LinearLayout>
        //버튼들이랑 텍스트 전체 감사는 Layout

</LinearLayout>