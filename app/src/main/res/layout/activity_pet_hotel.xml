<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:tag="layout/activity_hotel_home_0"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:background="@android:color/white">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:collapsedTitleTextAppearance="@style/CollapsingToolbarCollapsed"
            app:expandedTitleMarginBottom="20dp"
            app:expandedTitleMarginEnd="20dp"
            app:expandedTitleMarginStart="20dp"
            app:expandedTitleTextAppearance="@style/CollapsingToolbarExpanded"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:title="@string/hotel_home_title"
            app:toolbarId="@+id/toolbar">

            <!--<android.support.v7.widget.Toolbar--> ImageButton으로 바꿈
                <!--android:id="@+id/toolbar"-->
                <!--style="@style/GlobalToolbarStyle"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="44dp"-->
                <!--app:layout_collapseMode="pin"-->
                <!--app:navigationIcon="@drawable/ic_btn_back" />-->

            <ImageButton
                android:id="@+id/activity_pet_hotel_backbtn"
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                app:srcCompat="@drawable/ic_btn_back" />

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.9"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:visibility="visible"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/in"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center_vertical|center"
            android:text="체크인" />

        <TextView
            android:id="@+id/out"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center_vertical|center"
            android:text="체크 아웃"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Checkin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:ems="10"
            android:gravity="center_vertical|center"
            android:inputType="textPersonName"
            android:text="YY/DD/MM"
            android:textSize="18dp" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="  ~" />

        <TextView
            android:id="@+id/Checkout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:ems="10"
            android:gravity="center_vertical|center"
            android:inputType="textPersonName"
            android:text="YY/DD/MM"
            android:textSize="18dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.1"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/Search"
            android:layout_width="244dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:background="@color/cardview_shadow_end_color"
            android:ems="10"
            android:gravity="center"
            android:hint="호텔명 또는 지역명"
            android:inputType="textPersonName" />

        <ImageButton
            android:id="@+id/selection"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:background="@color/cardview_shadow_end_color"
            app:srcCompat="@drawable/ic_place" />
    </LinearLayout>

    <Button
        android:id="@+id/HotelSearch"
        android:layout_width="196dp"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="30dp"
        android:layout_weight="1.1"
        android:backgroundTint="@color/colorPrimary"
        android:text="검색하기" />

</LinearLayout>