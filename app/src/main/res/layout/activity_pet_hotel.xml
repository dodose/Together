<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:tag="layout/activity_hotel_home_0"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/mdtp_white"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="호텔예약"
            android:layout_gravity="center"
            android:id="@+id/HotelNameView"
            android:textSize="20sp"
            />

    </androidx.appcompat.widget.Toolbar>


    //로고를 감싸는 layout

        <ImageView
            android:id="@+id/together_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:src="@drawable/together_logo" />


        //버튼들이랑 텍스트 전체 감사는 Layout
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:background="@drawable/hotel_home_body"
            android:orientation="vertical">

            //아이콘이랑 텍스트값 전체를 감싸는 layout

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        app:srcCompat="@drawable/ic_3d_building" />

                    <TextView
                        android:id="@+id/location"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="30dp"
                        android:padding="15dp"
                        android:gravity="center"
                        android:hint="호텔이름 또는 지역 명"
                        android:background="@drawable/hotel_loaction_btn"
                        android:textSize="18dp"/>



            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"

                />

            //날짜 아이콘이랑 선택한 날짜 Layout
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="15dp"
                android:orientation="horizontal">


                //날짜 아이콘만 감싸는 Layout
                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:paddingLeft="1dp"
                       android:layout_weight="0.78"
                       app:srcCompat="@drawable/ic_schedule" />

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.29"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="30dp"
                        android:padding="18dp"
                        android:background="@drawable/hotel_loaction_btn"
                        android:gravity="center"
                        android:text="날짜 선택"
                        android:textSize="18dp"
                        />

            </LinearLayout>
            //날짜 아이콘이랑 선택한 날짜 Layout


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />


            //날짜 선택 Layout
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="40dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/searchBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/hotel_searchbtn"
                    android:textSize="20dp"
                    android:text="호텔 검색"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

            </LinearLayout>
            //날짜 선택 Layout


        </LinearLayout>
        //버튼들이랑 텍스트 전체 감사는 Layout

</LinearLayout>