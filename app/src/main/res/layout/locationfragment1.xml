<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.3">

        <LinearLayout
            android:id="@+id/defualt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Seoul"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/background_border_graybtn2"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:text="서울"/>

                <TextView
                    android:id="@+id/Gyeonggi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:background="@drawable/background_border_graybtn7"
                    android:gravity="center"
                    android:text="경기도"/>

                <TextView
                    android:id="@+id/Gangwon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/background_border_graybtn2"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:text="강원도"/>

            </LinearLayout>
            //////////////////////////////////////////////////
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Jeonbuk"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:background="@drawable/background_border_graybtn7"
                    android:gravity="center"
                    android:text="전북"/>

                <TextView
                    android:id="@+id/Jeonnam"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:background="@drawable/background_border_graybtn2"
                    android:gravity="center"
                    android:text="전남"/>

                <TextView
                    android:id="@+id/Daegu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:background="@drawable/background_border_graybtn7"
                    android:gravity="center"
                    android:text="대구"/>

            </LinearLayout>
            ////////////////////////////////////////////////

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Kyungbuk"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:background="@drawable/background_border_graybtn2"
                    android:gravity="center"
                    android:text="경북"/>

                <TextView
                    android:id="@+id/Kyungnam"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:background="@drawable/background_border_graybtn7"
                    android:gravity="center"
                    android:text="경남"/>

                <TextView
                    android:id="@+id/Busan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:background="@drawable/background_border_graybtn2"
                    android:gravity="center"
                    android:text="부산"/>

            </LinearLayout>
            //////////////////////////////////////////////

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Ulsan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:background="@drawable/background_border_graybtn7"
                    android:gravity="center"
                    android:text="울산"/>

                <TextView
                    android:id="@+id/Pohang"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:background="@drawable/background_border_graybtn2"
                    android:gravity="center"
                    android:text="포항"/>

                <TextView
                    android:id="@+id/Jeaju"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:background="@drawable/background_border_graybtn7"
                    android:gravity="center"
                    android:text="제주특별시"/>

            </LinearLayout>

        </LinearLayout>


    </androidx.appcompat.widget.LinearLayoutCompat>

</LinearLayout>