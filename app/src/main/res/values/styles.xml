<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBlue</item>
        <item name="colorPrimaryDark">@color/colorBlue</item>
        <item name="colorAccent">@color/colorBlue</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!--PetHotel Home-->

    <style name="CollapsingToolbarCollapsed">
        <item name="android:textSize">20sp</item>
    </style>


    <style name="CollapsingToolbarExpanded">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="GlobalToolbarStyle">
        <item name="contentInsetStart">20dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="theme">@style/GlobalToolbarTheme</item>
    </style>

    <style name="GlobalToolbarTheme">
        <item name="toolbarNavigationButtonStyle">@style/GlobalToolbarStyleNavigation</item>
    </style>

    <style name="GlobalToolbarStyleNavigation">
        <item name="android:maxWidth">44dp</item>
        <item name="android:minWidth">44dp</item>
    </style>


    <!--Goodbye pet-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


</resources>
